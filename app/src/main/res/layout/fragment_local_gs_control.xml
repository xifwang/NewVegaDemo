<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/fragment_local_gs_control_mutebutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:background="@drawable/icon_mic_off"
        android:clickable="true"
        android:contentDescription="muteIcon"
        android:gravity="bottom|center"
        android:text="@string/mute"
        android:visibility="visible" />

    <Button
        android:id="@+id/fragment_local_gs_control_camerabutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:layout_toRightOf="@+id/fragment_local_gs_control_mutebutton"
        android:background="@drawable/icon_video_off"
        android:clickable="true"
        android:contentDescription="cameraIcon"
        android:gravity="bottom|center"
        android:text="@string/cameraoff"
        android:visibility="visible" />


    <Button
        android:id="@+id/fragment_local_gs_control_cameracontrolbutton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:layout_toRightOf="@+id/fragment_local_gs_control_camerabutton"
        android:background="@drawable/icon_camcontrol_off"
        android:clickable="true"
        android:contentDescription="cameraControlIcon"
        android:gravity="bottom|center"
        android:text="@string/cameracontrol"
        android:visibility="visible" />


    <SeekBar
        android:id="@+id/fragment_local_gs_control_volumebutton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/fragment_local_gs_control_mutebutton"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:max="100"
        android:text="Volume"
        android:visibility="visible" />


    <ImageView

        android:layout_margin="15dp"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:background="@drawable/touchpad"
        android:id="@+id/fragment_local_gs_control_cameraimageview"
        android:layout_below="@+id/fragment_local_gs_control_volumebutton"
        android:visibility="invisible" />

</RelativeLayout>